@model Dictionary<string,Setting>


<section class="footer-top">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="footer-about font-md mb-md-3 mb-lg-3 mb-xl-0 wow animate__animated animate__fadeInUp" data-wow-delay="0">
                    <div class="logo mb-30">

                        <p>CALL US NOW<span>@Model["Phone_1"].Value</span></p>
                        <a asp-controller="Home" asp-action="Index" class="mb-15"><img src="~/@Model["Logo_Name"].Value" alt="logo" /></a>

                        <p>@Model["P1"].Value</p>
