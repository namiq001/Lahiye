@model SearchVM

<!-- Main -->
<main class="main">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 col-lg-12 m-auto">
                <div class="page-header breadcrumb-wrap">
                    <div class="breadcrumb">
                        <a asp-controller="Home" asp-action="Index" rel="nofollow"><i class="fas fa-home mr-10"></i> Home</a>
                        <span></span> Product <span></span> List
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-content">
        <div class="container mb-30">
            <div class="row flex-row-reverse">
                <div class="col-lg-4-5">
                    <div class="shop-product-fillter">
                        <form asp-action="Index" asp-controller="ProductList">
                            <div class="input-group">
                                <div class="form-outline">
                                    <input type="text" name="search" placeholder="Search" class="form-control" />
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </form>

                        
                        <div class="totall-product">
                            <div class="sort-by-product-area">
                                <div class="sort-by-cover mr-10">
                                    <div class="sort-by-dropdown">
                                        <ul>
                                            <li><a class="active" href="#">50</a></li>
                                            <li><a href="#">100</a></li>
                                            <li><a href="#">150</a></li>
                                            <li><a href="#">200</a></li>
                                            <li><a href="#">All</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="totall-product">
                            <div class="sort-by-product-area">
                                <div class="sort-by-cover">
                                    <div class="sort-by-dropdown">
                                        <ul>
                                            <li><a class="active" href="#">8</a></li>
                                            <li><a href="#">10</a></li>
                                            <li><a href="#">15</a></li>
                                            <li><a href="#">20</a></li>
                                            <li><a href="#">All</a></li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row product-grid">

                        @foreach (Product item in Model.Products)
                        {
                            <!-- Product Card -->
                            <div class="col-lg-4 col-md-4 col-12 col-sm-6">
                                <div class="product-card mb-30 wow animate__animated animate__fadeIn" data-wow-delay=".1s">
                                    <div class="product-img-col">
                                        <div class="product-img product-img-zoom">
                                            <a asp-controller="Product" asp-action="ViewProduct">
                                                <img class="img-fluid" src="~/assets/img/shop/@item.ProductImageUrl" alt="" />
                                            </a>
                                        </div>
                                        <div class="product-inner-details">
                                            <a aria-label="Quick view" class="product-btn" asp-controller="Product" asp-action="ViewProduct" asp-route-id="@item.Id"><i class="fi-rs-eye"></i></a>
                                            <a aria-label="Add To Wishlist" class="product-btn" asp-controller="Product" asp-action="AddWishList" asp-route-itemid="@item.Id"><i class="fi-rs-heart"></i></a>
                                            <a asp-controller="Product" asp-action="AddCart" asp-route-id="@item.Id" aria-label="Cart" class="product-btn"><i class="fi-rs-shopping-cart"></i></a>
                                        </div>
                                        <div class="product-badge">
                                            <span class="best">Sale</span>
                                        </div>
                                    </div>
                                    <div class="product-content">
                                        <h2><a asp-controller="Product" asp-action="ViewProduct" asp-route-id="@item.Id">@item.ProductName</a></h2>
                                        <div class="product-card-bottom mt-0">
                                            <div class="product-price">
                                                <span>$ @item.NewPrice</span>
                                                <span class="old-price">$ @item.OldPrice</span>
                                                <span class="discount-tag">- @item.Percentage %</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Product Card -->
                        }
                        
                    </div>
                </div>
                <div class="col-lg-1-5 primary-sidebar sticky-sidebar">
                    
                </div>
            </div>
        </div>
    </div>
</main>
<!-- /Main -->