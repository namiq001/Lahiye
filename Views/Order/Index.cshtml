@using NOOKX_Project.ViewModels.ProductVM;
@model List<CartVM>
<!-- Main -->
<main class="main pages">
    <div class="page-header breadcrumb-wrap">
        <div class="container">
            <div class="breadcrumb">
                <a asp-controller="Home" asp-action="Index" rel="nofollow"><i class="fas fa-home mr-10"></i> Home</a>
                <span></span> Order
            </div>
        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 m-auto">
                    <div class="card mb-30">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-lg-12">
                                    <div class="d-flex align-items-center">
                                        <div class="account-profile-img">
                                            <img src="assets/img/profile-img.jpg" alt="Image">
                                        </div>
                                        <div class="account-details">
                                            <p>Hello,</p>
                                            <h4>@User.Identity.Name</h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="dashboard-menu">
                                <ul class="nav flex-column" id="accordionExample">
                                    <li class="nav-item" id="dashboard-one">
                                        <a class="nav-link accordion-button collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="false" aria-controls="collapseOne"><i class="fi-rs-user mr-10"></i>Account Information</a>
                                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="dashboard-one" data-bs-parent="#accordionExample">
                                            <ul class="dashboard-sub-link">
                                                <li><a asp-controller="Info" asp-action="Index">My Profile</a></li>
                                            </ul>
                                        </div>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link active" asp-controller="Order" asp-action="Index"><i class="fi-rs-shopping-cart mr-10"></i>My Orders</a>
                                    </li>
                                    <li class="nav-item" id="dashboard-two">
                                        <a class="nav-link accordion-button" href="#" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="true" aria-controls="collapseTwo">
                                            <i class="fi-rs-heart mr-10"></i>My Stuff
                                        </a>
                                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="dashboard-two" data-bs-parent="#accordionExample">
                                            <ul class="dashboard-sub-link">
                                                <li><a asp-controller="Product" asp-action="GetWishList">My Wishlist</a></li>
                                            </ul>
                                        </div>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" asp-controller="Account" asp-action="LogOut"><i class="fi-rs-sign-out mr-10"></i>Logout</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-9">
                            <div class="account dashboard-content">
                                <div class="card border-0 mb-25">
                                    <div class="card-header card-header-border d-flex align-items-center justify-content-between pt-0">
                                        <h3 class="card-title">My Orders</h3>
                                    </div>
                                </div>
                                <div class="row">
                                    @if (Model is null)
                                    {
                                        <div class="col-lg-12">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="col-lg-12">
                                            @foreach (var item in Model)
                                            {
                                                <div class="card mb-25">
                                                    <div class="card-header card-header-ordered d-flex align-items-center justify-content-between">
                                                        <h4 class="card-sub-title"></h4>
                                                        <p class="bg-ordered">ordered</p>
                                                    </div>
                                                    <div class="card-body">
                                                        <div class="card-details pt-0">
                                                            <div class="d-flex align-items-center justify-content-between">
                                                                <a asp-controller="Product" asp-action="ViewProduct" asp-route-id="@item.Id"><img style="width:100px" src="~/assets/img/shop/@item.ImageName" class="img-fluid" alt=""></a>
                                                                <h4 class="card-details-title">@item.ProductName</h4>
                                                                <h4 class="card-details-title">$@(item.Count * item.Price)</h4>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<!-- /Main -->